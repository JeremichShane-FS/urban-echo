{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["src/assets/styles/*"],
      "@utils/*": ["src/modules/core/utils/*"],
      "@*": ["src/*"]
    },
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "ESNext"
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
